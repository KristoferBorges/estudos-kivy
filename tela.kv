<TelaInicial>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tela Inicial'
        Button:
            text: 'Ir para Tela Secundária'
            on_release: app.root.current = 'tela_secundaria'

<TelaSecundaria>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tela Secundária'
        Button:
            text: 'Ir para a Terceira tela'
            on_release: app.root.current = 'new_screen'
            
<NovaTela3>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Terceira tela'
        Button:
            text: 'Voltar para a Tela inicial'
            on_release: app.root.current = 'tela_inicial'