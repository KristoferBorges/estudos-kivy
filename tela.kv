<TelaInicial>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tela 1'
            font_size: 40
            color: 1, 0, 1
            bold: True
            # Centralizadores
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

        TextInput:
            hint_text: 'Digite um número'
            size_hint: 0.4, 0
            font_size: 40
            pos_hint: {"center_x": 0.5, "center_y": 0.} 
            halign: "center"
            valign: "bottom"
            

        Button:
            text: 'Ir para Tela 2'
            on_release: app.root.current = 'tela_secundaria'
            size_hint: 0.4, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.5} 
        

<TelaSecundaria>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tela 2'
            font_size: 40
            color: 1, 0, 1
            bold: True
            # Centralizadores
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        TextInput:
            hint_text: 'Digite um número'
            size_hint: 0.4, 0
            font_size: 40
            pos_hint: {"center_x": 0.5, "center_y": 0.} 
            halign: "center"
            valign: "bottom"

        Button:
            text: 'Ir para Tela Final'
            on_release: app.root.current = 'tela_final'
            size_hint: 0.4, 0
            pos_hint: {"center_x": 0.5, "center_y": 0.5}   


<TelaFinal>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tela Final'
            font_size: 40
            color: 1, 0, 1
            bold: True
            # Centralizadores
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            
        Button:
            text: 'Voltar para a Tela inicial'
            on_release: app.root.current = 'tela_inicial'