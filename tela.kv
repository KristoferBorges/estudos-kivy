#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Button>:
    font_size: 26
    font_name: 'Verdana'
    border: (2, 2, 2, 2)
    border_width: 2
    border_color: 1, 0, 0, 1
    border_radius: [30]

<ScreenManager>:
    transition: FadeTransition()
    TelaDeEscolha:
        id: inicio
        name: 'inicio'

    TelaBrinquedos:
        id: brinquedos
        name: 'brinquedos'

    TelaComidas:
        id: comidas
        name: 'comidas'

    TelaAnimais:
        id: animais
        name: 'animais'

    TelaJogos:
        id: jogos
        name: 'jogos'

<TelaDeEscolha>:
    GridLayout:
        cols: 1
        spacing: 6
        Button:
            text: 'BRINQUEDOS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'brinquedos'
        Button:
            text: 'COMIDAS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'comidas'
        Button:
            text: 'ANIMAIS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'animais'
        Button:
            text: 'JOGOS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'jogos'

<TelaBrinquedos>:
    GridLayout:
        cols: 1
        Label:
            text: 'Conteúdo da tela de brinquedos'
            font_size: 20
            font_name: 'Verdana'
        TextInput:
            id: input_brinquedos
            name: 'brinquedos'
            hint_text: 'Digite algo...'
            multiline: False
            size_hint: (0.5, None)
            height: '48dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.2, 0.1)
            Button:
                text: 'VOLTAR'
                font_size: 26
                font_name: 'Verdana'
                on_release:
                    root.manager.current = 'inicio'
            Button:
                text: 'ENVIAR'
                font_size: 26
                font_name: 'Verdana'
                on_release:
                    root.enviar_texto(input_brinquedos.text)


