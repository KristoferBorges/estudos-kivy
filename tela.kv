#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Button>:
    font_size: 26
    font_name: 'Verdana'
    border: (2, 2, 2, 2)
    border_width: 2
    border_color: 1, 0, 0, 1
    border_radius: [30]

<ScreenManager>:
    transition: FadeTransition()
    TelaDeEscolha:
        id: inicio
        name: 'inicio'

    TelaBrinquedos:
        id: brinquedos
        name: 'brinquedos'

    TelaComidas:
        id: comidas
        name: 'comidas'

    TelaAnimais:
        id: animais
        name: 'animais'

    TelaJogos:
        id: jogos
        name: 'jogos'

<TelaDeEscolha>:
    GridLayout:
        cols: 1
        spacing: 6
        Button:
            text: 'BRINQUEDOS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'brinquedos'
        Button:
            text: 'COMIDAS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'comidas'
        Button:
            text: 'ANIMAIS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'animais'
        Button:
            text: 'JOGOS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'jogos'

<TelaBrinquedos>:
    GridLayout:
        cols: 1
        Label:
            text: 'Conteúdo da tela de brinquedos'
            font_size: 20
            font_name: 'Verdana'
        Button:
            text: 'VOLTAR'
            font_size: 26
            font_name: 'Verdana'
            size_hint: (0.5, 0.2)
            on_release:
                root.manager.current = 'inicio'

<TelaComidas>:
    GridLayout:
        cols: 1
        Label:
            text: 'Conteúdo da tela de comidas'
            font_size: 20
            font_name: 'Verdana'
        Button:
            text: 'VOLTAR'
            font_size: 26
            font_name: 'Verdana'
            size_hint: (0.5, 0.2)
            on_release:
                root.manager.current = 'inicio'

<TelaAnimais>:
    GridLayout:
        cols: 1
        Label:
            text: 'Conteúdo da tela de animais'
            font_size: 20
            font_name: 'Verdana'
        Button:
            text: 'VOLTAR'
            font_size: 26
            font_name: 'Verdana'
            size_hint: (0.5, 0.2)
            on_release:
                root.manager.current = 'inicio'

<TelaJogos>:
    GridLayout:
        cols: 1
        Label:
            text: 'Conteúdo da tela de jogos'
            font_size: 20
            font_name: 'Verdana'
        Button:
            text: 'VOLTAR'
            font_size: 26
            font_name: 'Verdana'
            size_hint: (0.5, 0.2)
            on_release:
                root.manager.current = 'inicio'