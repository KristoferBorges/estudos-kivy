#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<ScreenManager>:
    transition: FadeTransition()
    TelaDeEscolha:
        id: inicio
        name: 'inicio'

    TelaBrinquedos:
        id: brinquedos
        name: 'brinquedos'

<TelaDeEscolha>:
    GridLayout:
        cols: 1
        spacing: 6
        Button:
            text: 'BRINQUEDOS'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'brinquedos'
        Button:
            text: 'COMIDAS'
            font_size: 26
            font_name: 'Verdana'
        Button:
            text: 'ANIMAIS'
            font_size: 26
            font_name: 'Verdana'
        Button:
            text: 'JOGOS'
            font_size: 26
            font_name: 'Verdana'

<TelaBrinquedos>:
    GridLayout:
        cols: 1
        Label:
            text: 'Conte√∫do da tela de brinquedos'
            font_size: 20
