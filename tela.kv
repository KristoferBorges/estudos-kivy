<TelaInicial>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tela Inicial'
            font_size: 40
            color: 1, 0, 1
            bold: True
            # Centralizadores
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
        Button:
            text: 'Ir para Tela Secundária'
            on_release: app.root.current = 'tela_secundaria'
        TextInput:
            hint_text: 'Insira o texto aqui'
            size_hint: 0.5, 0.2
            pos_hint: {"center_x": 0.5, "center_y": 0.5}

<TelaSecundaria>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Tela Secundária'
        Button:
            text: 'Ir para a Terceira tela'
            on_release: app.root.current = 'new_screen'
            
<NovaTela3>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Terceira tela'
        Button:
            text: 'Voltar para a Tela inicial'
            on_release: app.root.current = 'tela_inicial'