#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Button>:
    font_size: 26
    font_name: 'Verdana'
    border: (2, 2, 2, 2)
    border_width: 2
    border_color: 1, 0, 0, 1
    border_radius: [30]


<ScreenManager>:
    transition: FadeTransition()
    MenuPrincipal:
        id: menu_1
        name: 'menu_1'

    NovosRegistros:
        id: registros
        name: 'registros'

    RegistrosRDMarcas:
        id: registrosrdmarcas
        name: 'registrosrdmarcas'

    RegistrosPerfumaria:
        id: registrosperfumaria
        name: 'registrosperfumaria'

    LimparDados:
        id: limpardados
        name: 'limpardados'

    ConsultaDeListas:
        id: consultarlistas
        name: 'consultarlistas'

    CriarBackup:
        id: criarbackup
        name: 'criarbackup'

    FecharPrograma:
        id: fecharPrograma
        name: 'fecharprograma'


<MenuPrincipal>:
    GridLayout:
        cols: 1
        spacing: 6
        padding: 10

        Button:
            text: 'NOVOS REGISTROS'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'registros'
        Button:
            text: 'LIMPAR DADOS'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'limpardados'
        Button:
            text: 'CONSULTAR LISTAS'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'consultarlistas'
        Button:
            text: 'CRIAR BACKUP'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'criarbackup'
        Button:
            text: 'SAIR'
            font_size: 26
            color: 1, 0, 0, 1
            font_name: 'Verdana'
            size_hint: (0.0, 0.9)
            on_release:
                app.stop()


# Opções do Menu principal
<NovosRegistros>:
    GridLayout:
        cols: 1
        spacing: 6
        padding: 10

        Label:
            text: 'NOVOS REGISTROS'
            font_size: 26
            orientation: 'horizontal'
            size_hint: (0.5, 0.5)
        Button:
            text: 'RD MARCAS'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'registrosrdmarcas'

        Button:
            text: 'PERFUMARIA'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'registrosperfumaria'

        Button:
            text: 'DERMO'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            size_hint: (0.0, 0.9)

        Button:
            text: 'VOLTAR'
            font_size: 26
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'menu_1'


<RegistrosRDMarcas>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Label:
            text: 'Preencha os campos (RD-MARCAS)'
            font_size: 20
            color: 1, 1, 0, 1
            size_hint: (1, None)
            text_size: (None, None)

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '30dp'

            Label:
                size_hint: (0.3, 1)
                text: 'Data (00/00/0000)'

            TextInput:
                id: data_input
                size_hint: (0.7, 1)
                multiline: False

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '30dp'

            Label:
                size_hint: (0.3, 1)
                text: 'Meta (Dia)'

            TextInput:
                id: meta_input
                size_hint: (0.7, 1)
                input_filter: 'int'
                multiline: False

        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, None)
            height: '30dp'

            Label:
                size_hint: (0.3, 1)
                text: 'Vendas (Dia)'

            TextInput:
                id: venda_input
                size_hint: (0.7, 1)
                input_filter: 'int'
                multiline: False

        BoxLayout:
            orientation: 'horizontal'
            Widget:
                width: self.parent.width - (button1.width + button2.width)

            Button:
                id: button1
                text: 'VOLTAR'
                font_size: 26
                font_name: 'Verdana'
                size_hint: (0.5, 0.2)

                on_release:
                    root.manager.current = 'registros'
            Button:
                id: button2
                text: 'FINALIZAR'
                font_size: 26
                font_name: 'Verdana'
                size_hint: (0.7, 0.2)

