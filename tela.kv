#:import FadeTransition kivy.uix.screenmanager.FadeTransition

<Button>:
    font_size: 26
    font_name: 'Verdana'
    border: (2, 2, 2, 2)
    border_width: 2
    border_color: 1, 0, 0, 1
    border_radius: [30]

<ScreenManager>:
    transition: FadeTransition()
    TelaDeEscolha:
        id: menu_1
        name: 'menu_1'

    NovosRegistros:
        id: registros
        name: 'registros'

    LimparDados:
        id: limpardados
        name: 'limpardados'

    ConsultaDeListas:
        id: consultarlistas
        name: 'consultarlistas'

    CriarBackup:
        id: criarbackup
        name: 'criarbackup'

    FecharPrograma:
        id: FecharPrograma
        name: 'fecharprograma'

<TelaDeEscolha>:
    GridLayout:
        cols: 1
        spacing: 6
        Button:
            text: 'NOVOS REGISTROS'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'registros'
        Button:
            text: 'LIMPAR DADOS'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'limpardados'
        Button:
            text: 'CONSULTAR LISTAS'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'consultarlistas'
        Button:
            text: 'CRIAR BACKUP'
            font_size: 26
            color: 1, 1, 0, 1
            font_name: 'Verdana'
            on_release:
                root.manager.current = 'criarbackup'
        Button:
            text: 'SAIR'
            font_size: 26
            color: 1, 0, 0, 1
            font_name: 'Verdana'
            size_hint: (0.0, 0.9)
            on_release:
                app.stop()

<NovosRegistros>:
    GridLayout:
        cols: 1
        Label:
            text: 'Conteúdo da tela de registros'
            font_size: 20
            font_name: 'Verdana'
        TextInput:
            hint_text: 'Digite algo...'
            multiline: False
            size_hint: (0.5, None)
            height: '48dp'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (0.2, 0.1)
            Button:
                text: 'VOLTAR'
                font_size: 26
                font_name: 'Verdana'
                on_release:
                    root.manager.current = 'menu_1'
            Button:
                text: 'ENVIAR'
                font_size: 26
                font_name: 'Verdana'


